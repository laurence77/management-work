# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# JWT Secret (Generate a strong secret for production)
JWT_SECRET=generate-a-strong-256-bit-secret-key-for-production-use
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=your-refresh-token-secret-key-here
REFRESH_TOKEN_EXPIRES_IN=7d

# Admin Credentials (NEVER commit real values)
ADMIN_EMAIL=admin@eliteconnect.com
ADMIN_PASSWORD=your-secure-admin-password
MANAGEMENT_EMAIL=management@bookmyreservation.org
MANAGEMENT_PASSWORD=your-secure-management-password

# Application Configuration
NODE_ENV=development
PORT=3000

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Configuration (if using alternative to Supabase)
# DATABASE_URL=postgresql://username:password@localhost:5432/dbname

# Security Configuration
# CORS_ORIGIN=https://yourdomain.com
# SECURE_COOKIES=true
# SESSION_TIMEOUT=3600000